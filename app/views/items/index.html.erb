<h1>All Items</h1>

<% @items.each do |item| %>
  <h2><%= item.name %></h2>
  <p><%= item.description %></p>
  <p>Price: $<%= item.price %></p>
  <p><%= item.image %></p>
  <% if item.active? %>
    <p>Active</p>
    <% else %>
    <p>Inactive</p>
    <% end %>
  <p>Inventory: <%= item.inventory %></p>
<% end %>
